@model ArabaSatis.Dto.AppUserDtoRegister
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Bootstrap demo</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
	<link href="¨/css/site.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-4 offset-md-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Login via site</h3>
					</div>
					<div class="panel-body">
						<form accept-charset="UTF-8" method="post" role="form" asp-action="Index" asp-controller="Register">
							<fieldset>
								<div class="form-group">
									<input class="form-control" placeholder="Adınızı Girin" asp-for="FirstName" name="FirstName" type="text">
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="Soyadınızı Girin" asp-for="LastName" name="LastName" type="text">
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="Şehrinizi Girin" asp-for="City" name="City" type="text">
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="Kullanıcı Adı Girin" asp-for="UserName" name="UserName" type="text">
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="Email Adresiniz" asp-for="Email" name="email" type="text">
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="Şifre" asp-for="Password" name="password" type="password" value="">
								</div>

								<div class="form-group">
									<input class="form-control" placeholder="Şifre Tekrar"  asp-for="ConfirmPassword" name="password" type="password" value="">
								</div>
								
								<input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
							</fieldset>
						</form>
						<hr />
						<center><h4>OR</h4></center>
						<input class="btn btn-lg btn-facebook btn-block" type="submit" value="Login via facebook">
					</div>
				</div>
			</div>
		</div>
	</div>




	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>