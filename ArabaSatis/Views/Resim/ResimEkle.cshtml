@model ArabaSatis.Models.ArabaResim

@{
    ViewData["Title"] = "ResimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ResimEkle</h1>

<h4>ArabaResim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResimEkle" asp-controller="Resim" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ilanId" class="control-label"></label>
                <input type="hidden" value="@ViewBag.IlanId" asp-for="ilanId" />
            </div>
            <div class="form-group">
                <label asp-for="Resim" class="control-label"></label>

                <input asp-for="Picture" type="file" class="form-control" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

